# Database
MONGODB_URI=mongodb://localhost:27017/vietnam_stock_tracker

# JWT (IMPORTANT: Generate strong secrets for production!)
JWT_SECRET=your_super_secret_jwt_key_change_in_production_minimum_64_characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production_minimum_64_characters
JWT_REFRESH_EXPIRE=30d

# Server
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Email Configuration (Use Gmail App Password)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_16_characters
EMAIL_FROM=Your App Name <noreply@yourdomain.com>

# External APIs (Get from respective providers)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
DNSE_API_KEY=your_dnse_api_key_here
DNSE_API_SECRET=your_dnse_api_secret_here

# Redis (Optional - for production caching)
REDIS_URL=redis://localhost:6379

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Market Data
MARKET_OPEN_HOUR=9
MARKET_CLOSE_HOUR=15
TIMEZONE=Asia/Ho_Chi_Minh
SERVER_TIMEZONE=Asia/Ho_Chi_Minh
SERVER_START_HOUR=9
SERVER_END_HOUR=15

# Activity Logging
ACTIVITY_BATCH_SIZE=10
ACTIVITY_BATCH_INTERVAL=5000

# News APIs (Optional)
NEWS_API_KEY=your_news_api_key_here
VIETSTOCK_API_KEY=your_vietstock_api_key_here

# Encryption (Generate 32 character random string)
ENCRYPTION_KEY=your_32_character_encryption_key_here
