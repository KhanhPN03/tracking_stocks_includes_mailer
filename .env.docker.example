# Docker Development Environment Variables
# Copy this to .env.docker and customize for your Docker setup

# MongoDB (for docker-compose)
MONGO_USERNAME=admin
MONGO_PASSWORD=change_this_password_in_production

# JWT Secrets (Generate strong ones for production!)
JWT_SECRET=development_jwt_secret_change_in_production
JWT_REFRESH_SECRET=development_refresh_secret_change_in_production

# API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
DNSE_API_KEY=your_dnse_api_key
DNSE_API_SECRET=your_dnse_api_secret

# Email (for notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Optional
NEWS_API_KEY=your_news_api_key
VIETSTOCK_API_KEY=your_vietstock_api_key
